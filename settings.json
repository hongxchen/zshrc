{
    // vscode主题配置
    "editor.lineHeight": 24,
    "editor.renderLineHighlight": "none",
    "editor.renderWhitespace": "none",
    "editor.fontFamily": "SourceCodePro-Regular",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "smooth",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.suggestSelection": "first",
    "editor.largeFileOptimizations": false,
    // 是否允许自定义的snippet片段提示,比如自定义的vue片段开启后就可以智能提示
    "editor.snippetSuggestions": "top",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // 禁用Open Editors
    "explorer.openEditors.visible": 0,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "vscode-icons",
    "files.trimTrailingWhitespace": true,
    // vscode 文件搜索区域配置
    "search.exclude": {
        "**/dist": true,
        "**/build": true,
        "**/elehukouben": true,
        "**/.git": true,
        "**/.gitignore": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/yarn.lock": true,
        "**/tmp": true,
        "**/node": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/target": true
    },
    // 排除文件搜索区域，比如node_modules(贴心的默认设置已经屏蔽了)
    "files.exclude": {
        "**/.idea": true,
        "**/yarn.lock": true,
        "**/tmp": true,
        "**/.git": true,
        "**/.gradle": true,
        "**/.mvn": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    // 配置文件关联，以便启用对应的智能提示，比如wxss使用css
    "files.associations": {
        "*.vue": "vue",
        "*.wxss": "css",
        "*.cjson": "jsonc",
        "*.wxs": "javascript"
    },
    // 配置emmet是否启用tab展开缩写
    "emmet.triggerExpansionOnTab": true,
    // 配置emmet对文件类型的支持，比如vue后缀文件按照html文件来进行emmet扩写
    "emmet.syntaxProfiles": {
        "vue-html": "html",
        "vue": "html",
        "javascript": "javascriptreact",
        // xml类型文件默认都是单引号，开启对非单引号的emmet识别
        "xml": {
            "attr_quotes": "single"
        }
    },
    // 在react的jsx中添加对emmet的支持
    "emmet.includeLanguages": {
        "jsx-sublime-babel-tags": "javascriptreact",
        "wxml": "html"
    },
    // 是否开启eslint检测
    "eslint.enable": true,
    // 如果为true，将使用单引号而不是双引号
    // "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    // 细节,配置gitlen中git提交历史记录的信息显示情况
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },
    // git是否启用自动拉取
    "git.autofetch": true,
    // vetur插件格式化规则
    "vetur.format.defaultFormatter.html": "prettier",
    "vetur.format.defaultFormatter.css": "prettier",
    "vetur.format.defaultFormatter.postcss": "prettier",
    "vetur.format.defaultFormatter.scss": "prettier",
    "vetur.format.defaultFormatter.less": "prettier",
    "vetur.format.defaultFormatter.stylus": "stylus-supremacy",
    "vetur.format.defaultFormatter.js": "prettier",
    "vetur.format.defaultFormatter.ts": "prettier",
    "vetur.validation.template": false,
    // kubernetes
    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "/Users/hongxchen/.vs-kubernetes/tools/helm/darwin-amd64/helm",
        "vs-kubernetes.draft-path": "/Users/hongxchen/.vs-kubernetes/tools/draft/darwin-amd64/draft"
    },
    // intellicode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // golang
    "go.useLanguageServer": true,
    "go.formatTool": "goimports",
    "go.autocompleteUnimportedPackages": true,
    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",
    // minapp
    "minapp-vscode.disableAutoConfig": true,
    // python
    "python.jediEnabled": false,
    "python.pythonPath": "/usr/local/bin/python3",
    // java
    "java.home": "/Library/Java/JavaVirtualMachines/zulu-11.jdk/Contents/Home",
    "java.codeGeneration.generateComments": true,
    "java.saveActions.organizeImports": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.semanticHighlighting.enabled": true,
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/Users/hongxchen/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    // c/c++
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    // leetcode
    "leetcode.endpoint": "leetcode-cn",
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.workspaceFolder": "/Users/hongxchen/.leetcode",
    "leetcode.defaultLanguage": "java",
    "leetcode.showDescription": "Both",
    "leetcode.hint.commandShortcut": false,
    "leetcode.hint.commentDescription": false,
    // typescript
    "typescript.updateImportsOnFileMove.enabled": "always",
    // cmake
    "cmake.configureOnOpen": true,
    // todo-tree
    "todo-tree.highlights.enabled": true,
    "todo-tree.tree.showScanModeButton": false,
    // Formatter
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Code Runner
    "code-runner.runInTerminal": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    }
}
